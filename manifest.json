{
  "manifest_version": 2,
  "name": "PBWorks Offline Add-on",
  "version": "1.0",
  "description": "Enables limited offline usage of PBWorks.",
  "icons": {
    "400": "assets/img/pb_400x400.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "./dist/PBwork.js",
      "data_base_api.js",
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "32": "assets/img/pb_400x400.png"
    },
    "default_popup": "popup/Index.html"

  }
}
